<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvTitleCleanArchitecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_clean_architecture_mvvm"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_urban_dictionary"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uiTvTitleCleanArchitecture"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/uiEtTypeWordForMeaning"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="@string/str_type_word_for_meaning"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uiTvTitle"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uiBtnGetMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_get_meaning"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@id/uiEtTypeWordForMeaning"
        app:layout_constraintEnd_toEndOf="@id/uiEtTypeWordForMeaning"
        app:layout_constraintTop_toBottomOf="@id/uiEtTypeWordForMeaning"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/uiBtnGetMeaning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Meaning" />



</androidx.constraintlayout.widget.ConstraintLayout>